﻿@{
    ViewData["Title"] = "Sales Records";
}

<div class="container">
    <h3 class="text-dark">@ViewData["Title"]</h3>
    <hr />
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form class="form-horizontal" asp-action="SimpleSearch">
                <fieldset>
                    <h4 class="text-dark">Simple Search</h4>
                    <div class="form-group mb-1">
                        <label for="minDate" class="col-lg-2 control-label">Min Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group mb-1">
                        <label for="maxDate" class="col-lg-2 control-label">Max Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group mb-4 mt-3">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary">
                                Submit
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form class="form-horizontal" asp-action="GroupingSearch">
                <fieldset>
                    <h4 class="text-dark">Grouping Search</h4>
                    <div class="form-group mb-1">
                        <label for="minDate" class="col-lg-2 control-label">Min Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group mb-1">
                        <label for="maxDate" class="col-lg-2 control-label">Max Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group mb-4 mt-3">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary">
                                Submit
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
