@model IEnumerable<SalesSystem.Models.SalesRecord>

@{
    ViewData["Title"] = "Simple Search";
}

<div class="container">
    <h3 class="text-dark">@ViewData["Title"]</h3>
</div>

<div class="container">
    <form>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label for="minDate" class="control-label">Min Date</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="maxDate" class="control-label">Max Date</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
            </div>
            <div class="col">
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        Filter
                        <i class="bi bi-arrow-clockwise"></i>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="container">
    <div class="text-center mt-4 mb-4">
        <h4 class="text-dark">Total Sales = @Model.Sum(obj => obj.Amount).ToString("F2")</h4>
    </div>
</div>

<div class="container table-responsive">  
    <table class="table table-hover align-middle">
        <thead class="align-middle">
            <tr class="table-primary">
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Seller)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Seller.Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Seller.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Seller.Department.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                </tr>
            }
        </tbody>
    </table>    
</div>

<div class="container">
    <a asp-action="Index" class="btn btn-secondary">
        Back to List
        <i class="bi bi-arrow-left"></i>
    </a>
</div>
