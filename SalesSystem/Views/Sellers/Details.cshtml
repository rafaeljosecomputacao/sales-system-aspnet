@model SalesSystem.Models.Seller

@{
    ViewData["Title"] = "Details Seller";
}

<div class="container">
    <h3 class="text-dark">@ViewData["Title"]</h3>
    <hr />
</div>

<div class="container">
    <dl class="row">
        <dt class="col-sm-2 text-dark">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2 text-dark">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2 text-dark">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2 text-dark">
            @Html.DisplayNameFor(model => model.BaseSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BaseSalary)
        </dd>
        <dt class="col-sm-2 text-dark">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
    </dl>
</div>

<div class="container">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        Edit
        <i class="bi bi-pencil"></i>
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        Back to List
        <i class="bi bi-arrow-left"></i>
    </a>
</div>
