@model IEnumerable<SalesSystem.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container">
    <h3 class="text-dark">@ViewData["Title"]</h3>
    <p>
        <a class="btn btn-primary" asp-action="Create">
            Create New
            <i class="bi bi-plus"></i>
        </a>
    </p>
</div>

<div class="container table-responsive">
    <table class="table table-hover align-middle">
        <thead class="align-middle">
            <tr class="table-primary">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    Operations
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <div class="row">
                            <div class="col m-1">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                    Edit
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                            <div class="col m-1">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                    Details
                                    <i class="bi bi-eye"></i>
                                </a>
                            </div>
                            <div class="col m-1">
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                    Delete
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
